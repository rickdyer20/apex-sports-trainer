# Basketball Analysis Service - Railway Environment Configuration
# These environment variables will be set automatically during Railway deployment

# Performance Optimizations (Applied automatically by deploy script)
TF_CPP_MIN_LOG_LEVEL=2
CUDA_VISIBLE_DEVICES=""
TF_ENABLE_ONEDNN_OPTS=0
MEDIAPIPE_DISABLE_GPU=1

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0

# Python Configuration
PYTHONUNBUFFERED=1

# Railway will automatically set these:
# PORT=<assigned_port>
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=basketball-analysis
# RAILWAY_PROJECT_NAME=<your_project_name>

# Optional: Add these manually in Railway dashboard if needed
# MAX_UPLOAD_SIZE=104857600  # 100MB
# PROCESSING_TIMEOUT=120     # 2 minutes
# MAX_CONCURRENT_JOBS=5
