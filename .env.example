# Render-specific environment variables
# Copy this to .env for local development

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# File Upload Settings  
MAX_FILE_SIZE=100
UPLOAD_FOLDER=uploads
RESULTS_FOLDER=results

# Processing Settings
MAX_PROCESSING_TIME=120
FRAME_SKIP=3
ENABLE_ORIENTATION_CORRECTION=false

# Memory Management
GARBAGE_COLLECTION_INTERVAL=20
MAX_CONCURRENT_JOBS=2

# Storage (for cloud deployment)
# Uncomment and configure for cloud storage
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret  
# S3_BUCKET_NAME=your-bucket-name
# GCS_BUCKET_NAME=your-gcs-bucket

# Database (for production)
# DATABASE_URL=postgresql://username:password@hostname:port/database

# Logging
LOG_LEVEL=INFO
LOG_FILE=basketball_analysis_production.log

# Performance
TF_ENABLE_ONEDNN_OPTS=0
TF_CPP_MIN_LOG_LEVEL=2

# Render-specific
PORT=10000
