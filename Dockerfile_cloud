# Dockerfile for Basketball Analysis Service
# Optimized for Google Cloud Run and AWS ECS

FROM python:3.12-slim

# Install system dependencies for MediaPipe and OpenCV
RUN apt-get update && apt-get install -y \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements_full_cloud.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p uploads results jobs logs

# Expose port (Cloud Run uses PORT environment variable)
EXPOSE 8080

# Use environment PORT or default to 8080
ENV PORT=8080
ENV FLASK_ENV=production
ENV PYTHONPATH=/app

# Start gunicorn with cloud optimizations
CMD exec gunicorn --bind :$PORT --workers 1 --threads 8 --timeout 0 wsgi:application
