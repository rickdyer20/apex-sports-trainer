# Basketball Analysis Service - Production Environment Configuration
# Copy this to .env.production and update with your actual values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Application settings
APP_NAME=Basketball Analysis Service
APP_VERSION=1.0.0
MAX_CONTENT_LENGTH=104857600  # 100MB max file size

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Production Database
DB_HOST=basketball-analysis-db.cluster-xxx.us-west-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=basketball_analysis_prod
DB_USER=basketball_user
DB_PASSWORD=secure_database_password_change_this
DB_SSL_MODE=require

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=basketball-analysis-redis.cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=secure_redis_password_change_this

# ==============================================
# AWS SERVICES CONFIGURATION
# ==============================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 Storage for videos
S3_BUCKET_UPLOADS=basketball-analysis-uploads
S3_BUCKET_RESULTS=basketball-analysis-results
S3_BUCKET_STATIC=basketball-analysis-static

# CloudFront CDN
CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC
CLOUDFRONT_DOMAIN=cdn.basketballanalysis.com

# ==============================================
# CONTAINER/KUBERNETES CONFIGURATION
# ==============================================
KUBERNETES_NAMESPACE=basketball-analysis
WORKER_REPLICAS=3
WEB_REPLICAS=2

# Resource limits
CPU_REQUEST=500m
CPU_LIMIT=2000m
MEMORY_REQUEST=1Gi
MEMORY_LIMIT=4Gi

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Prometheus monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health check endpoints
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/basketball-analysis.crt
SSL_KEY_PATH=/etc/ssl/private/basketball-analysis.key
FORCE_HTTPS=true

# CORS settings
CORS_ORIGINS=https://basketballanalysis.com,https://app.basketballanalysis.com

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# VIDEO PROCESSING CONFIGURATION
# ==============================================

# Processing settings
MAX_VIDEO_LENGTH_MINUTES=10
PROCESSING_TIMEOUT_MINUTES=30
MAX_CONCURRENT_JOBS=5

# Quality settings
OUTPUT_VIDEO_QUALITY=high
OUTPUT_VIDEO_BITRATE=2000k
OUTPUT_VIDEO_FPS=30

# ==============================================
# PAYMENT & BILLING
# ==============================================

# Stripe configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Subscription plans
PLAN_FREE_ANALYSES_PER_MONTH=3
PLAN_PRO_ANALYSES_PER_MONTH=50
PLAN_ENTERPRISE_ANALYSES_PER_MONTH=unlimited

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=apikey
MAIL_PASSWORD=your_sendgrid_api_key
MAIL_DEFAULT_SENDER=noreply@basketballanalysis.com

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
ADMIN_EMAIL=admin@basketballanalysis.com
ADMIN_PASSWORD=secure_admin_password_change_this

# Support contact
SUPPORT_EMAIL=support@basketballanalysis.com
SUPPORT_PHONE=+1-555-BASKETBALL

# ==============================================
# PERFORMANCE & CACHING
# ==============================================

# Cache settings
CACHE_DEFAULT_TIMEOUT=3600
CACHE_KEY_PREFIX=basketball_analysis_

# Session settings
PERMANENT_SESSION_LIFETIME=1800  # 30 minutes

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_USER_REGISTRATION=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_ANALYTICS_TRACKING=true
FEATURE_A_B_TESTING=false
