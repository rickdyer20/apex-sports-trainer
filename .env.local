# Local Development Environment Variables
# Configuration for running basketball analysis service locally

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=basketball_analysis_local_dev_key_2025

# Server Settings
FLASK_HOST=127.0.0.1
PORT=5000

# File Upload Settings  
MAX_FILE_SIZE=100
UPLOAD_FOLDER=uploads
RESULTS_FOLDER=results

# Processing Settings (optimized for local development)
MAX_PROCESSING_TIME=300
FRAME_SKIP=2
ENABLE_ORIENTATION_CORRECTION=true

# Memory Management (relaxed for local)
GARBAGE_COLLECTION_INTERVAL=30
MAX_CONCURRENT_JOBS=1

# Logging (verbose for development)
LOG_LEVEL=DEBUG
LOG_FILE=basketball_analysis.log

# Performance (optimized for local development)
TF_ENABLE_ONEDNN_OPTS=0
TF_CPP_MIN_LOG_LEVEL=1

# Local Development Features
ENABLE_DEBUG_OUTPUTS=true
SAVE_DEBUG_FRAMES=true
ENABLE_DETAILED_LOGGING=true
