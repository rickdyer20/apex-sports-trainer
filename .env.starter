# Render Starter Plan Environment Variables
# Copy these to your Render Dashboard Environment Variables section

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Processing Configuration (Optimized for Starter Plan)
MAX_PROCESSING_TIME=180
FRAME_SKIP=2
GARBAGE_COLLECTION_INTERVAL=15
MAX_CONCURRENT_JOBS=3

# Memory & Performance Optimizations
TF_ENABLE_ONEDNN_OPTS=0
TF_CPP_MIN_LOG_LEVEL=2
OPENCV_DISABLE_CUDA_CACHE=1

# File Upload Settings
MAX_FILE_SIZE=30
UPLOAD_FOLDER=uploads
RESULTS_FOLDER=results

# Orientation Correction (disabled for consistency)
ENABLE_ORIENTATION_CORRECTION=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=basketball_analysis_production.log

# Render Port (auto-assigned)
PORT=10000
